{
    "compilerOptions": {
        "target": "es2019",
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": [
            "es2019"
        ],
        "sourceMap": true,
        "outDir": "build",
        "rootDir": ".",
        "esModuleInterop": true
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "./node_modules/*",
        "build"
    ]
}